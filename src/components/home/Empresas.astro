---
import { empresas } from "../../data/empresasData.js";
---

<section class="py-16 bg-gray-50">
  <div class="max-w-6xl mx-auto text-center px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-green-800 mb-12">
      خدماتنا الطبية المتخصصة
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
      {
        empresas.map((empresa) => (
          <div class="group cursor-pointer">
            {/* هذا هو الإطار الذي سيحتوي النص بالداخل */}
            <div class="w-full h-32 bg-[#495057] text-white rounded-2xl flex items-center justify-center p-6 shadow-lg transition-all duration-300 group-hover:bg-green-700 group-hover:-translate-y-2">
              <span class="text-xl md:text-2xl font-bold text-center leading-snug">
                {empresa.nombre}
              </span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
