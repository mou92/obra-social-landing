---
import { faqs } from "../../data/faqData.js";
---

<section class="py-20 bg-base-200">
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-[#2F855A] mb-8">
      الأسئلة الشائعة
    </h2>

    <div class="flex flex-col gap-4">
      {
        faqs.map((faq, index) => (
          <div class="collapse collapse-plus border border-base-300 bg-base-100 rounded-lg">
            <input type="radio" name="faq-accordion" checked={index === 0} />
            <div class="collapse-title text-lg font-semibold text-[#2F855A]">
              {faq.question}
            </div>
            <div class="collapse-content text-gray-600">
              <p>{faq.answer}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
